{
  "name": "poynt-monorepo",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "typecheck": "turbo typecheck",
    "check": "biome check --write .",
    "check:ci": "biome ci .",
    "clean": "turbo clean",
    "nuke": "find . -name 'node_modules' -type d -prune -exec rm -rf {} + && find . -name '.next' -type d -prune -exec rm -rf {} + && rm -rf .turbo && bun install"
  },
  "devDependencies": {
    "turbo": "latest",
    "@biomejs/biome": "^1.9.4"
  },
  "packageManager": "bun@1.2.0",
  "workspaces": ["apps/*", "packages/*", "tooling/*"]
}
